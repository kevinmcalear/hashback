<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br/>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br/>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br/>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br/>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br/>

  <%= f.label :instagram_username %>
  <%= f.text_field :instagram_username %>
  <br/>

  <%= f.label "Date of Birth" %>
  <%= f.date_field :dob %>
  <br/>

  <%= f.label :profile_picture_url %>
  <%= f.text_field :profile_picture_url %>
  <br/>


  <%= f.label :phone_number %>
  <%= f.phone_field :phone_number %>
  <br/>

  <%= f.submit @user.id.nil? ? "Join!" : "Save Changes" %>
<% end %>