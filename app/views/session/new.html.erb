<% unless @message.nil? %>
  <div id="errors">
    <h3>Errors!</h3>
    <ul>
      <li><em><%= @message %></em></li>
    </ul>
  </div>
<% end %>

<div class="login_form">

  <%= form_tag "/session" do %>
    <p>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    </p>
    <%= submit_tag "Log in!" %>
  <% end %>

</div>